import Layout from '../layouts/Layout.astro';
import logoBlanco from '../assets/logo_blanco.png';

const asesora = {
	nombre: 'María del Pilar Fortich',
	cargo: 'Desarrolladora de Negocios',
	frase: 'Amplifico oportunidades solares tejiendo relaciones sólidas y datos transparentes.',
	telefono: '+57 302 235 7757',
	whatsapp: 'https://wa.me/573022357757?text=Hola%20Mar%C3%ADa,%20quiero%20conocer%20tu%20portafolio%20solar',
	correo: 'comercial@reikisolar.com.co',
	sitio: 'https://reikisolar.com.co',
	ubicacion: 'Medellín, Colombia',
	disponibilidad: 'Lunes a sábado | 8:00 a.m. - 6:00 p.m.',
	portafolio: '/portafolio-servicios.pdf',
	contacto: '/contacto-maria-del-pilar.vcf'
};

const sociales = [
	{
		label: 'Instagram',
		href: 'https://www.instagram.com/reikienergiasolar',
		handle: '@reikienergiasolar',
		icon: 'fa-brands fa-instagram',
		gradient: 'linear-gradient(135deg, #f58529, #dd2a7b, #8134af, #515bd4)',
		glow: 'rgba(221, 42, 123, 0.35)'
	},
	{
		label: 'Facebook',
		href: 'https://www.facebook.com/reikienergiasolar',
		handle: '/reikienergiasolar',
		icon: 'fa-brands fa-facebook-f',
		gradient: 'linear-gradient(135deg, #1877f2, #3b5998)',
		glow: 'rgba(24, 119, 242, 0.3)'
	},
	{
		label: 'LinkedIn',
		href: 'https://www.linkedin.com/company/reikienergiasolar',
		handle: '/reiki-energia-solar',
		icon: 'fa-brands fa-linkedin-in',
		gradient: 'linear-gradient(135deg, #0a66c2, #004182)',
		glow: 'rgba(10, 102, 194, 0.35)'
	}
];

const pasos = [
	{
		titulo: 'Análisis energético',
		desc: 'Revisamos consumos y detectamos cómo rebajar tu factura eléctrica.'
	},
	{
		titulo: 'Estructura de propuesta económica',
		desc: 'Modelamos escenarios de inversión, ROI y esquemas de financiación.'
	},
	{
		titulo: 'Asesoramiento guiado',
		desc: 'Te acompaño paso a paso para aprovechar beneficios de la energía solar.'
	},
	{
		titulo: 'Postventa cercana',
		desc: 'Seguimos midiendo resultados, resolvemos dudas y activamos nuevas mejoras.'
	}
];
---

<Layout title={`Tarjeta digital | ${asesora.nombre}`}>
	<main class="tarjeta-shell">
		<div class="halo halo-1"></div>
		<div class="halo halo-2"></div>

		<section class="tarjeta">
			<img src={logoBlanco} alt="Reiki Energía Solar" width="140" height="40" class="brand-mark" />
			<div class="tarjeta__perfil">
				<div class="avatar-frame">
					<div class="avatar-glow"></div>
					<img src="/images/maria-del-pilar.jpeg" alt="María del Pilar Fortich" loading="lazy" decoding="async" width="260" height="260" />
				</div>
				<span class="badge">Tu aliada solar</span>
				<h1>{asesora.nombre}</h1>
				<p class="rol">{asesora.cargo}</p>
				<p class="mantra">
					¿Cansado de ver subir tu factura de energía cada mes? Te ayudo a tomar el control.
					Diseño soluciones de energía solar a la medida para tu hogar, permitiéndote generar tu propia energía limpia y ahorrar hasta un 90% en tu pago mensual. Vive en un hogar sostenible y valoriza tu propiedad.
				</p>

				<div class="keypoints">
					<p>Puntos clave:</p>
					<ul>
						<li>Estudio de viabilidad gratuito.</li>
						<li>Instalación estética y segura.</li>
						<li>Monitoreo desde tu celular.</li>
					</ul>
				</div>

				<div class="pill-group">
					<span>{asesora.ubicacion}</span>
					<span>{asesora.disponibilidad}</span>
				</div>

				<div class="contact-grid">
					<a class="contact-card" href={asesora.whatsapp} target="_blank" rel="noopener">
						<i class="fa-brands fa-whatsapp"></i>
						<div>
							<p class="label">WhatsApp directo</p>
							<p class="value">{asesora.telefono}</p>
						</div>
					</a>

					<a class="contact-card" href={`mailto:${asesora.correo}`}>
						<i class="fa-solid fa-envelope"></i>
						<div>
							<p class="label">Correo</p>
							<p class="value">{asesora.correo}</p>
						</div>
					</a>

					<a class="contact-card" href={asesora.sitio} target="_blank" rel="noopener">
						<i class="fa-solid fa-globe"></i>
						<div>
							<p class="label">Sitio web</p>
							<p class="value">reikisolar.com.co</p>
						</div>
					</a>

					<a class="contact-card" href={asesora.portafolio} target="_blank" rel="noopener">
						<i class="fa-solid fa-file-arrow-down"></i>
						<div>
							<p class="label">Portafolio PDF</p>
							<p class="value">Descargar servicios</p>
						</div>
					</a>
				</div>

				<div class="cta-group">
					<a class="cta cta--primary" href={asesora.whatsapp} target="_blank" rel="noopener">
						<i class="fa-brands fa-whatsapp"></i>
						Hablemos por WhatsApp
					</a>
					<a class="cta cta--save" href={asesora.contacto} download="Maria-del-Pilar-Fortich.vcf">
						<i class="fa-regular fa-address-card"></i>
						Guardar contacto
					</a>
					<a class="cta cta--ghost" href="https://cal.com/reikienergia/30min" target="_blank" rel="noopener">
						<i class="fa-regular fa-calendar"></i>
						Agendar videollamada
					</a>
				</div>
			</div>

			<div class="tarjeta__qr">
				<div class="timeline">
					{pasos.map((paso, index) => (
						<article>
							<div class="dot" aria-hidden="true"></div>
							<div>
								<p class="step">Paso {index + 1}</p>
								<h3>{paso.titulo}</h3>
								<p>{paso.desc}</p>
							</div>
						</article>
					))}
				</div>

				<div class="social social--buttons">
					<p>Conectemos en mis canales activos:</p>
					<div class="social__buttons">
						{sociales.map((social) => (
							<a class="social-btn" style={`--btn-bg:${social.gradient}; --btn-glow:${social.glow};`} href={social.href} target="_blank" rel="noopener" aria-label={social.label}>
								<span class="social-btn__icon">
									<i class={social.icon}></i>
								</span>
								<div>
									<strong>{social.label}</strong>
									<span>{social.handle}</span>
								</div>
							</a>
						))}
					</div>
				</div>

				<div class="closing-cta">
					<p>¿Listo para encender tu techo con energía limpia y pagar menos? Escríbeme hoy y diseñamos tu plan solar.</p>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	:global(body) {
		background: #030712;
		color: #f4f6fb;
		font-family: 'Space Grotesk', 'Poppins', 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
	}

	.tarjeta-shell {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: clamp(2rem, 4vw, 4rem);
		position: relative;
		overflow: hidden;
	}

	.halo {
		position: absolute;
		border-radius: 999px;
		filter: blur(60px);
		opacity: 0.8;
		pointer-events: none;
	}

	.halo-1 {
		width: 420px;
		height: 420px;
		background: radial-gradient(circle, rgba(252, 211, 77, 0.45), transparent 70%);
		top: 5%;
		left: 10%;
	}

	.halo-2 {
		width: 520px;
		height: 520px;
		background: radial-gradient(circle, rgba(14, 165, 233, 0.35), transparent 65%);
		bottom: -5%;
		right: 5%;
	}

	.tarjeta {
		width: min(1180px, 100%);
		background: rgba(6, 10, 24, 0.85);
		border-radius: 32px;
		border: 1px solid rgba(255, 255, 255, 0.08);
		box-shadow: 0 40px 120px rgba(5, 7, 17, 0.65);
		backdrop-filter: blur(24px);
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 3rem;
		padding: clamp(2rem, 3vw, 3.5rem);
		position: relative;
		z-index: 1;
	}

	.brand-mark {
		position: absolute;
		top: 28px;
		right: 32px;
		width: 140px;
		opacity: 0.82;
		filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.45));
	}

	.tarjeta::after {
		content: '';
		position: absolute;
		inset: 1px;
		border-radius: 30px;
		border: 1px solid rgba(255, 255, 255, 0.05);
		pointer-events: none;
	}

	.tarjeta__perfil {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		align-items: flex-start;
	}

	.avatar-frame {
		position: relative;
		width: min(220px, 45vw);
		aspect-ratio: 1 / 1;
		border-radius: 50%;
		padding: 0.4rem;
		background: linear-gradient(135deg, rgba(252, 211, 77, 0.8), rgba(34, 211, 238, 0.6));
		display: grid;
		place-items: center;
	}

	.avatar-frame img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 50%;
		border: 6px solid rgba(3, 7, 18, 0.7);
		box-shadow: 0 25px 50px rgba(2, 6, 23, 0.75);
	}

	.avatar-glow {
		position: absolute;
		inset: -12px;
		border-radius: 50%;
		background: radial-gradient(circle, rgba(34, 211, 238, 0.25), transparent 65%);
		filter: blur(20px);
		z-index: -1;
	}

	.badge {
		width: fit-content;
		padding: 0.4rem 1rem;
		border-radius: 999px;
		background: linear-gradient(90deg, rgba(252, 211, 77, 0.2), rgba(14, 165, 233, 0.2));
		color: #fcd34d;
		font-size: 0.85rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		font-weight: 600;
	}

	h1 {
		margin: 0;
		font-size: clamp(2.4rem, 3vw, 3.2rem);
	}

	.rol {
		margin: 0;
		font-size: 1.1rem;
		color: rgba(255, 255, 255, 0.65);
		font-weight: 600;
	}

	.mantra {
		margin: 0;
		font-size: 1rem;
		color: rgba(255, 255, 255, 0.78);
		line-height: 1.6;
	}

	.keypoints {
		background: rgba(255, 255, 255, 0.03);
		border-radius: 18px;
		padding: 1rem 1.25rem;
		border: 1px solid rgba(255, 255, 255, 0.08);
	}

	.keypoints p {
		margin: 0 0 0.4rem;
		font-size: 0.9rem;
		color: rgba(255, 255, 255, 0.7);
		text-transform: uppercase;
		letter-spacing: 0.08em;
	}

	.keypoints ul {
		margin: 0;
		padding-left: 1.1rem;
		display: grid;
		gap: 0.35rem;
		color: rgba(255, 255, 255, 0.9);
		font-size: 0.95rem;
	}

	.pill-group {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.pill-group span {
		padding: 0.35rem 0.95rem;
		border-radius: 999px;
		border: 1px solid rgba(255, 255, 255, 0.18);
		font-size: 0.85rem;
		color: rgba(255, 255, 255, 0.82);
	}

	.contact-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 1rem;
	}

	.contact-card {
		padding: 1rem;
		border-radius: 20px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		background: rgba(255, 255, 255, 0.02);
		text-decoration: none;
		color: inherit;
		display: flex;
		gap: 1rem;
		align-items: center;
		transition: transform 0.25s ease, border-color 0.25s ease, background 0.25s ease;
	}

	.contact-card:hover {
		transform: translateY(-4px);
		border-color: rgba(252, 211, 77, 0.6);
		background: rgba(252, 211, 77, 0.08);
	}

	.contact-card i {
		font-size: 1.3rem;
		background: rgba(255, 255, 255, 0.08);
		padding: 0.65rem;
		border-radius: 50%;
	}

	.label {
		margin: 0;
		text-transform: uppercase;
		font-size: 0.7rem;
		letter-spacing: 0.08em;
		color: rgba(255, 255, 255, 0.6);
	}

	.value {
		margin: 0.15rem 0 0;
		font-size: 1rem;
		font-weight: 600;
		color: #f9fafb;
	}

	.cta-group {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		width: 100%;
	}

	.cta {
		border-radius: 999px;
		padding: 0.85rem 1.6rem;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		font-weight: 600;
		transition: transform 0.25s ease, box-shadow 0.25s ease;
	}

	.cta--save {
		background: linear-gradient(120deg, #fcd34d, #f97316);
		color: #0f172a;
		box-shadow: 0 25px 45px rgba(249, 115, 22, 0.35);
		border: none;
	}

	.cta--primary {
		background: linear-gradient(120deg, #22d3ee, #a855f7);
		color: #0f172a;
		box-shadow: 0 20px 45px rgba(34, 211, 238, 0.35);
	}

	.cta--ghost {
		color: #f4f6fb;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.cta:hover {
		transform: translateY(-2px) scale(1.01);
		box-shadow: 0 25px 40px rgba(15, 23, 42, 0.45);
	}

	.tarjeta__qr {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.timeline {
		border-radius: 28px;
		padding: 1.75rem;
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(255, 255, 255, 0.06);
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.timeline article {
		display: grid;
		grid-template-columns: auto 1fr;
		gap: 1rem;
		align-items: flex-start;
	}

	.dot {
		width: 14px;
		height: 14px;
		border-radius: 50%;
		background: linear-gradient(120deg, #fcd34d, #6366f1);
		margin-top: 0.4rem;
		box-shadow: 0 0 18px rgba(99, 102, 241, 0.6);
	}

	.step {
		margin: 0;
		text-transform: uppercase;
		font-size: 0.75rem;
		letter-spacing: 0.15em;
		color: rgba(255, 255, 255, 0.5);
	}

	.timeline h3 {
		margin: 0.2rem 0;
		font-size: 1.15rem;
	}

	.timeline p {
		margin: 0;
		color: rgba(255, 255, 255, 0.7);
		line-height: 1.5;
	}

	.social {
		border-radius: 24px;
		padding: 1.5rem;
		background: rgba(15, 23, 42, 0.85);
		border: 1px solid rgba(255, 255, 255, 0.05);
	}

	.social p {
		margin: 0 0 1rem;
		color: rgba(255, 255, 255, 0.65);
	}

	.social__buttons {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
		gap: 1rem;
	}

	.social-btn {
		display: flex;
		align-items: center;
		gap: 0.9rem;
		text-decoration: none;
		padding: 1rem 1.2rem;
		border-radius: 22px;
		color: rgba(255, 255, 255, 0.92);
		background-image: var(--btn-bg, linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02)));
		box-shadow: 0 20px 45px var(--btn-glow, rgba(15, 23, 42, 0.5));
		border: 1px solid rgba(255, 255, 255, 0.15);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.social-btn__icon {
		width: 44px;
		height: 44px;
		border-radius: 14px;
		background: rgba(3, 7, 18, 0.55);
		display: grid;
		place-items: center;
		font-size: 1.2rem;
	}

	.social-btn strong {
		display: block;
		font-size: 1rem;
	}

	.social-btn span {
		font-size: 0.85rem;
		color: rgba(255, 255, 255, 0.65);
	}

	.social-btn:hover {
		transform: translateY(-6px) scale(1.01);
		box-shadow: 0 35px 60px var(--btn-glow, rgba(15, 23, 42, 0.5));
		border-color: rgba(255, 255, 255, 0.35);
	}

	.closing-cta {
		margin-top: 1.5rem;
		padding: 1.5rem;
		border-radius: 24px;
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(255, 255, 255, 0.08);
		font-size: 1rem;
		color: rgba(255, 255, 255, 0.85);
		text-align: center;
	}

	@media (max-width: 768px) {
		.tarjeta {
			padding: 2rem;
		}

		.cta-group {
			flex-direction: column;
			align-items: stretch;
		}
	}

	@media (max-width: 560px) {
		.tarjeta {
			padding: 1.5rem;
		}

		.contact-grid {
			grid-template-columns: 1fr;
		}

		.social__links {
			flex-direction: column;
			align-items: stretch;
		}
	}
</style>

