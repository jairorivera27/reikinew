---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppFloat from '../components/WhatsAppFloat.astro';
import SEO from '../components/SEO.astro';
import FontAwesome from '../components/FontAwesome.astro';
import { getCollection } from 'astro:content';

// Obtener todos los posts del blog ordenados por fecha
const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => {
  const dateA = new Date(a.data.date);
  const dateB = new Date(b.data.date);
  return dateB.getTime() - dateA.getTime();
});

// Separar posts: último (más reciente), destacados, y resto
const latestPost = sortedPosts[0];
const featuredPosts = sortedPosts.filter(post => post.data.featured && post.slug !== latestPost.slug).slice(0, 3);
const regularPosts = sortedPosts.filter(post => post.slug !== latestPost.slug && !featuredPosts.some(fp => fp.slug === post.slug));

// Obtener todas las categorías únicas
const allCategories = [...new Set(sortedPosts.map(post => post.data.category))];
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Blog de Energía Solar en Colombia | Noticias y Guías | Reiki Energía Solar</title>
    <FontAwesome />
    <SEO 
      title="Blog de Energía Solar en Colombia | Noticias y Guías"
      description="Blog especializado en energía solar en Colombia. Noticias, consejos, guías y artículos sobre paneles solares, instalación solar, sistemas fotovoltaicos y energía renovable en Medellín y Colombia."
      canonical="/blog"
      keywords="blog energía solar Colombia, noticias paneles solares, guías energía solar, consejos instalación solar, artículos energía renovable, información paneles solares Medellín"
      schemaType="Blog"
    />
  </head>
  <body>
    <Header />
    
    <main>
      <!-- Hero Section -->
      <section class="blog-hero">
        <div class="hero-background-overlay"></div>
        <div class="container hero-content">
          <div class="hero-text">
            <h1 class="hero-title">
              <span class="title-highlight">Blog de Energía Solar</span>
            </h1>
            <p class="hero-subtitle">
              Descubre las últimas tendencias, consejos prácticos y noticias sobre energía solar en Colombia
            </p>
            <div class="hero-stats">
              <div class="stat-item">
                <span class="stat-number">{sortedPosts.length}+</span>
                <span class="stat-label">Artículos</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">{allCategories.length}</span>
                <span class="stat-label">Categorías</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">100%</span>
                <span class="stat-label">Gratuito</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Búsqueda y Filtros -->
      <section class="blog-filters-section">
        <div class="container">
          <div class="filters-wrapper">
            <div class="search-box">
              <i class="fas fa-search"></i>
              <input type="text" id="searchInput" placeholder="Buscar artículos..." class="search-input">
              <button class="search-clear" id="clearSearch" style="display: none;">
                <i class="fas fa-times"></i>
              </button>
            </div>
            <div class="category-filters">
              <button class="filter-btn active" data-category="all">
                <i class="fas fa-th"></i>
                Todos
              </button>
              {allCategories.map((category) => (
                <button class="filter-btn" data-category={category.toLowerCase().replace(/\s+/g, '-')}>
                  {category}
                </button>
              ))}
            </div>
          </div>
        </div>
      </section>

      <!-- Último Artículo Destacado (Horizontal) -->
      {latestPost && (
        <section class="latest-post-section">
          <div class="container">
            <div class="section-header">
              <div class="section-title-wrapper">
                <span class="section-badge">
                  <i class="fas fa-fire"></i>
                  Último Artículo
                </span>
                <h2 class="section-title">Lo Más Reciente</h2>
              </div>
            </div>
            <article class="latest-post-card">
              <a href={`/blog/${latestPost.slug}`} class="latest-post-link">
                <div class="latest-post-image">
                  <img 
                    src={latestPost.data.image} 
                    alt={latestPost.data.title}
                    loading="eager"
                  >
                  <div class="latest-post-overlay">
                    <div class="read-indicator">
                      <i class="fas fa-book-open"></i>
                      <span>Leer artículo</span>
                    </div>
                  </div>
                </div>
                <div class="latest-post-content">
                  <div class="latest-post-meta">
                    <span class="post-category-badge">{latestPost.data.category}</span>
                    <span class="post-date">
                      <i class="fas fa-calendar-alt"></i>
                      {new Date(latestPost.data.date).toLocaleDateString('es-CO', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </span>
                    <span class="post-author">
                      <i class="fas fa-user"></i>
                      {latestPost.data.author}
                    </span>
                  </div>
                  <h3 class="latest-post-title">{latestPost.data.title}</h3>
                  <p class="latest-post-description">{latestPost.data.description}</p>
                  {latestPost.data.tags && latestPost.data.tags.length > 0 && (
                    <div class="latest-post-tags">
                      {latestPost.data.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                  <div class="latest-post-cta">
                    <span class="cta-text">Leer artículo completo</span>
                    <i class="fas fa-arrow-right"></i>
                  </div>
                </div>
              </a>
            </article>
          </div>
        </section>
      )}

      <!-- Artículos Destacados -->
      {featuredPosts.length > 0 && (
        <section class="featured-posts-section">
          <div class="container">
            <div class="section-header">
              <div class="section-title-wrapper">
                <span class="section-badge">
                  <i class="fas fa-star"></i>
                  Destacados
                </span>
                <h2 class="section-title">Artículos Destacados</h2>
              </div>
              <p class="section-subtitle">Los mejores contenidos seleccionados para ti</p>
            </div>
            <div class="featured-posts-grid">
              {featuredPosts.map((post) => (
                <article class="featured-post-card" data-category={post.data.category.toLowerCase().replace(/\s+/g, '-')}>
                  <a href={`/blog/${post.slug}`} class="featured-post-link">
                    <div class="featured-post-image">
                      <img 
                        src={post.data.image} 
                        alt={post.data.title}
                        loading="lazy"
                      >
                      <div class="featured-post-overlay">
                        <div class="read-time">
                          <i class="fas fa-clock"></i>
                          <span>5 min</span>
                        </div>
                      </div>
                    </div>
                    <div class="featured-post-content">
                      <div class="featured-post-meta">
                        <span class="post-category-badge">{post.data.category}</span>
                        <span class="post-date">
                          <i class="fas fa-calendar-alt"></i>
                          {new Date(post.data.date).toLocaleDateString('es-CO', { month: 'short', day: 'numeric' })}
                        </span>
                      </div>
                      <h3 class="featured-post-title">{post.data.title}</h3>
                      <p class="featured-post-description">{post.data.description}</p>
                      <div class="featured-post-footer">
                        <div class="post-author-small">
                          <i class="fas fa-user-circle"></i>
                          <span>{post.data.author}</span>
                        </div>
                        <span class="read-more-link">
                          Leer más <i class="fas fa-arrow-right"></i>
                        </span>
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          </div>
        </section>
      )}

      <!-- Todos los Artículos -->
      <section class="all-posts-section">
        <div class="container">
          <div class="section-header">
            <h2 class="section-title">Todos los Artículos</h2>
            <p class="section-subtitle">Explora nuestro contenido completo</p>
          </div>
          <div id="postsContainer" class="posts-grid">
            {regularPosts.map((post) => (
              <article class="post-card" data-category={post.data.category.toLowerCase().replace(/\s+/g, '-')} data-title={post.data.title.toLowerCase()} data-tags={post.data.tags?.join(' ').toLowerCase() || ''}>
                <a href={`/blog/${post.slug}`} class="post-link">
                  <div class="post-image-container">
                    <img 
                      src={post.data.image} 
                      alt={post.data.title}
                      class="post-image"
                      loading="lazy"
                    >
                    <div class="post-category">{post.data.category}</div>
                    <div class="post-hover-overlay">
                      <i class="fas fa-arrow-right"></i>
                    </div>
                  </div>
                  <div class="post-content">
                    <div class="post-meta">
                      <span class="post-date">
                        <i class="fas fa-calendar"></i>
                        {new Date(post.data.date).toLocaleDateString('es-CO', { month: 'short', day: 'numeric', year: 'numeric' })}
                      </span>
                      <span class="post-author">
                        <i class="fas fa-user"></i>
                        {post.data.author}
                      </span>
                    </div>
                    <h3 class="post-title">{post.data.title}</h3>
                    <p class="post-description">{post.data.description}</p>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="post-tags">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <span class="tag">{tag}</span>
                        ))}
                      </div>
                    )}
                    <span class="read-more">Leer más <i class="fas fa-arrow-right"></i></span>
                  </div>
                </a>
              </article>
            ))}
          </div>
          <div id="noResults" class="no-results" style="display: none;">
            <i class="fas fa-search"></i>
            <h3>No se encontraron artículos</h3>
            <p>Intenta con otros términos de búsqueda o filtros</p>
          </div>
        </div>
      </section>

      <!-- Newsletter CTA -->
      <section class="newsletter-section">
        <div class="container">
          <div class="newsletter-content">
            <div class="newsletter-icon">
              <i class="fas fa-envelope-open-text"></i>
            </div>
            <h2 class="newsletter-title">Mantente Actualizado</h2>
            <p class="newsletter-description">
              Recibe los últimos artículos y noticias sobre energía solar directamente en tu correo
            </p>
            <form class="newsletter-form" id="newsletterForm">
              <div class="form-group">
                <input 
                  type="email" 
                  placeholder="Tu correo electrónico" 
                  class="newsletter-input"
                  required
                >
                <button type="submit" class="newsletter-button">
                  <span>Suscribirse</span>
                  <i class="fas fa-paper-plane"></i>
                </button>
              </div>
            </form>
            <p class="newsletter-note">
              <i class="fas fa-shield-alt"></i>
              No compartimos tu información. Cancela cuando quieras.
            </p>
          </div>
        </div>
      </section>
    </main>
    
    <Footer />
    <WhatsAppFloat />
  </body>
</html>

<style>
  /* Hero Section */
  .blog-hero {
    position: relative;
    padding: 6rem 2rem 3rem;
    background: linear-gradient(135deg, #6b2181 0%, #8b2a9b 100%);
    color: white;
    overflow: hidden;
    min-height: 300px;
    display: flex;
    align-items: center;
  }

  .hero-background-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="pattern" width="40" height="40" patternUnits="userSpaceOnUse"><circle cx="20" cy="20" r="2" fill="%23ffffff" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23pattern)"/></svg>');
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    text-align: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
