    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #6b7280;
    cursor: pointer;
    padding: 0.5rem;
    font-size: 1rem;
  }

  .category-filters {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 0.75rem 1.5rem;
    border: 2px solid #e5e7eb;
    background: white;
    border-radius: 50px;
    font-size: 0.95rem;
    font-weight: 500;
    color: #6b7280;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .filter-btn:hover {
    border-color: #6b2181;
    color: #6b2181;
    transform: translateY(-2px);
  }

  .filter-btn.active {
    background: linear-gradient(135deg, #6b2181, #8b2a9b);
    color: white;
    border-color: transparent;
  }

  /* Latest Post Section */
  .latest-post-section {
    padding: 4rem 2rem;
    background: #f9fafb;
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .section-title-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #FFD700, #FFA500);
    color: #1f2937;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: #6b7280;
    margin-top: 0.5rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .latest-post-card {
    background: white;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .latest-post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(107, 33, 129, 0.2);
  }

  .latest-post-link {
    display: flex;
    flex-direction: row;
    text-decoration: none;
    color: inherit;
  }

  .latest-post-image {
    width: 45%;
    min-width: 400px;
    height: 400px;
    position: relative;
    overflow: hidden;
    background: #f3f4f6;
  }

  .latest-post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .latest-post-card:hover .latest-post-image img {
    transform: scale(1.1);
  }

  .latest-post-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(107, 33, 129, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .latest-post-card:hover .latest-post-overlay {
    opacity: 1;
  }

  .read-indicator {
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .latest-post-content {
    flex: 1;
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .latest-post-meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .post-category-badge {
    background: linear-gradient(135deg, #6b2181, #8b2a9b);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .post-date,
  .post-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6b7280;
    font-size: 0.9rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .post-date i,
  .post-author i {
    color: #6b2181;
  }

  .latest-post-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1rem;
    line-height: 1.2;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .latest-post-description {
    font-size: 1.2rem;
    color: #6b7280;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .latest-post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .tag {
    background: #f3f4f6;
    color: #6b2181;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .latest-post-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: #6b2181;
    font-weight: 600;
    font-size: 1.1rem;
    transition: gap 0.3s ease;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .latest-post-card:hover .latest-post-cta {
    gap: 1rem;
  }

  /* Featured Posts Section */
  .featured-posts-section {
    padding: 4rem 2rem;
    background: white;
  }

  .featured-posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .featured-post-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
  }

  .featured-post-card.visible {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .featured-post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(107, 33, 129, 0.15);
  }

  .featured-post-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .featured-post-image {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
    background: #f3f4f6;
  }

  .featured-post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .featured-post-card:hover .featured-post-image img {
    transform: scale(1.15);
  }

  .featured-post-overlay {
    position: absolute;
    top: 1rem;
    right: 1rem;
  }

  .read-time {
    background: rgba(255, 255, 255, 0.95);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    color: #1f2937;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .featured-post-content {
    padding: 2rem;
  }

  .featured-post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .featured-post-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .featured-post-description {
    font-size: 1rem;
    color: #6b7280;
    line-height: 1.6;
