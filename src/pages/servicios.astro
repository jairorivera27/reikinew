---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppFloat from '../components/WhatsAppFloat.astro';
import SEO from '../components/SEO.astro';
import FontAwesome from '../components/FontAwesome.astro';
import { getCollection } from 'astro:content';

// Obtener todos los servicios ordenados
const servicios = await getCollection('servicios');
const serviciosOrdenados = servicios.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Servicios de Energía Solar en Medellín | Instalación Paneles Solares | Reiki Energía Solar</title>
    <FontAwesome />
    <SEO 
      title="Servicios de Energía Solar en Medellín | Instalación Paneles Solares"
      description="Servicios profesionales de instalación de energía solar en Medellín y Colombia. Sistemas fotovoltaicos para hogares, empresas, bombeo solar y estaciones móviles. Cotización gratuita."
      canonical="/servicios"
      keywords="instalación paneles solares Medellín, servicios energía solar Colombia, sistemas fotovoltaicos, energía solar empresas, bombeo solar, estación energía móvil, instalación solar profesional, cotización energía solar"
      schemaType="WebPage"
    />
  </head>
  <body>
    <Header />
    
    <main>
      <section class="services-hero">
        <div class="container">
          <h1 class="hero-title">Nuestros Servicios</h1>
          <p class="hero-subtitle">Soluciones integrales de energía solar para hogares, empresas y proyectos especiales</p>
        </div>
      </section>

      <section class="services-section">
        <div class="container">
          <div class="services-grid">
            {serviciosOrdenados.map((servicio, index) => (
              <a href={`/servicios/${servicio.slug}`} class="service-card">
                <div class="service-image-container">
                  <img 
                    src={index === 0 ? "/energia solar vivienda.png" : index === 1 ? "/images/Eenergia solar en empresas de medellin.png" : index === 2 ? "/images/estación de energía solar móvil en Colombia.png" : index === 3 ? "/images/Bombeo solar en Colombia.png" : servicio.data.image} 
                    alt={servicio.data.title}
                    class="service-image"
                    loading="lazy"
                  >
                  <div class="service-overlay">
                    <div class="service-link">
                      <i class="fas fa-arrow-right"></i>
                    </div>
                  </div>
                </div>
                <div class="service-content">
                  <h3 class="service-title">{servicio.data.title}</h3>
                  <p class="service-description">{servicio.data.description}</p>
                  
                  <div class="service-benefits">
                    <h4 class="benefits-title">Beneficios principales:</h4>
                    <ul class="benefits-list">
                      {servicio.data.benefits.slice(0, 4).map((benefit) => (
                        <li class="benefit-item">
                          <i class="fas fa-check"></i>
                          <span>{benefit}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  <div class="service-cta">
                    {servicio.data.cta.text}
                    <i class="fas fa-arrow-right"></i>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>


      <section class="services-cta-section">
        <div class="container">
          <div class="services-cta-content">
            <h2 class="services-cta-title">¿Necesitas una Solución Personalizada?</h2>
            <p class="services-cta-description">
              Nuestro equipo de expertos está listo para diseñar la solución perfecta para tus necesidades
            </p>
            <div class="services-cta-buttons">
              <a href="https://wa.me/573245737413" target="_blank" rel="noopener noreferrer" class="services-cta-button whatsapp">
                <i class="fab fa-whatsapp"></i>
                Contactar por WhatsApp
              </a>
              <a href="#contacto" class="services-cta-button primary">
                <i class="fas fa-envelope"></i>
                Solicitar Cotización
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
    
    <Footer />
    <WhatsAppFloat />
  </body>
</html>

<style>
  .services-hero {
    padding: 10rem 2rem 4rem;
    background: linear-gradient(135deg, #6b2181 0%, #8b2a9b 100%);
    text-align: center;
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: #e5e7eb;
    max-width: 700px;
    margin: 0 auto;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .services-section {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, #6b2181 0%, #8b2a9b 100%);
    min-height: 100vh;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    opacity: 0;
    transform: translateX(-50px);
    display: flex;
    flex-direction: row;
    align-items: stretch;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .service-card.visible {
    opacity: 1;
    transform: translateX(0);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .service-card.visible:hover {
    transform: translateY(-15px) translateX(0) scale(1.02);
    box-shadow: 0 20px 60px rgba(255, 255, 255, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.2);
  }

  .service-image-container {
    position: relative;
    width: 40%;
    min-width: 300px;
    height: auto;
    overflow: hidden;
    background: #f3f4f6;
    flex-shrink: 0;
  }

  .service-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .service-card.visible:hover .service-image {
    transform: scale(1.15);
  }

  .service-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .service-card:hover .service-overlay {
    opacity: 0;
  }

  .service-link {
    width: 60px;
    height: 60px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6b2181;
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .service-content {
    padding: 2rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .service-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    transition: color 0.3s ease, text-shadow 0.3s ease, transform 0.3s ease;
  }

  .service-card.visible:hover .service-title {
    color: #6b2181;
    text-shadow: 0 2px 8px rgba(107, 33, 129, 0.3);
    transform: translateX(5px);
  }

  .service-description {
    font-size: 1rem;
    line-height: 1.7;
    color: #6b7280;
    margin-bottom: 1.5rem;
    text-align: justify;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    transition: color 0.3s ease;
  }

  .service-card.visible:hover .service-description {
    color: #4b5563;
  }

  .service-benefits {
    margin-bottom: 1.5rem;
  }

  .benefits-title {
    font-size: 1rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.75rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    transition: color 0.3s ease;
  }

  .service-card.visible:hover .benefits-title {
    color: #6b2181;
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .benefit-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    color: #4b5563;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .service-card.visible:hover .benefit-item {
    color: #374151;
    transform: translateX(3px);
  }

  .benefit-item i {
    color: #6b2181;
    margin-top: 0.2rem;
    flex-shrink: 0;
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .service-card.visible:hover .benefit-item i {
    color: #8b2a9b;
    transform: scale(1.2);
  }

  .service-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #6b2181, #8b2a9b);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    pointer-events: none;
  }

  .service-card.visible:hover .service-cta {
    background: linear-gradient(135deg, #8b2a9b, #6b2181);
    box-shadow: 0 8px 25px rgba(107, 33, 129, 0.5);
    transform: translateY(-2px);
    gap: 0.75rem;
  }

  .services-cta-section {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, #6b2181 0%, #8b2a9b 100%);
    color: white;
    text-align: center;
  }

  .services-cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .services-cta-description {
    font-size: 1.2rem;
    color: #e5e7eb;
    margin-bottom: 2.5rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .services-cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .services-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .services-cta-button.primary {
    background: linear-gradient(135deg, #FFD700, #FFA500);
    color: #1f2937;
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
  }

  .services-cta-button.primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 215, 0, 0.6);
    background: linear-gradient(135deg, #FFA500, #FFD700);
  }

  .services-cta-button.whatsapp {
    background: linear-gradient(135deg, #FFD700, #FFA500);
    color: #1f2937;
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
  }

  .services-cta-button.whatsapp:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 215, 0, 0.6);
    background: linear-gradient(135deg, #FFA500, #FFD700);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .services-hero {
      padding: 8rem 1rem 3rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.2rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .service-card {
      flex-direction: column;
    }

    .service-image-container {
      width: 100%;
      min-width: unset;
      height: 250px;
    }


    .services-cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .services-cta-button {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
</style>

<script>
  // Efecto de scroll para las tarjetas de servicios
  document.addEventListener('DOMContentLoaded', function() {
    const serviceCards = Array.from(document.querySelectorAll('.service-card'));
    
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          const cardIndex = serviceCards.indexOf(entry.target);
          setTimeout(function() {
            entry.target.classList.add('visible');
          }, cardIndex * 100);
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    serviceCards.forEach(function(card) {
      observer.observe(card);
    });
  });
</script>

