---
// Footer.astro
import logoBlanco from '../assets/logo_blanco.png';
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- Logo y descripción -->
      <div class="footer-section footer-brand">
        <div class="footer-logo">
          <img src={logoBlanco.src} alt="Reiki Energía Solar" class="logo">
        </div>
        <p class="footer-description">
          Transformamos la energía del sol en soluciones sostenibles para tu hogar, empresa y proyectos.
        </p>
        <div class="social-links">
          <a href="https://www.facebook.com/profile.php?id=61551829530814" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Facebook">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="https://www.instagram.com/reikiener/" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Instagram">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="https://www.linkedin.com/company/reiki-energia-solar/" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
            <i class="fab fa-linkedin-in"></i>
          </a>
          <a href="https://wa.me/573245737413" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="WhatsApp">
            <i class="fab fa-whatsapp"></i>
          </a>
        </div>
      </div>

      <!-- Enlaces rápidos -->
      <div class="footer-section">
        <h4 class="footer-title">Enlaces Rápidos</h4>
        <ul class="footer-links">
          <li><a href="#inicio">Inicio</a></li>
          <li><a href="/servicios">Servicios</a></li>
          <li><a href="/tienda">Tienda</a></li>
          <li><a href="/quienes-somos">Quienes Somos</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/contacto">Contacto</a></li>
        </ul>
      </div>

      <!-- Servicios -->
      <div class="footer-section">
        <h4 class="footer-title">Nuestros Servicios</h4>
        <ul class="footer-links">
          <li><a href="#servicio-1">Energía Solar Hogar</a></li>
          <li><a href="#servicio-2">Energía Solar Empresas</a></li>
          <li><a href="#servicio-3">Bombeo Solar</a></li>
          <li><a href="#servicio-4">Energía Solar Móvil</a></li>
        </ul>
      </div>

      <!-- Contacto -->
      <div class="footer-section footer-contact">
        <h4 class="footer-title">Contacto</h4>
        <div class="contact-info">
          <div class="contact-item">
            <i class="fas fa-phone"></i>
            <span>Servicio al cliente: +57 324 573 7413</span>
          </div>
          <div class="contact-item">
            <i class="fas fa-envelope"></i>
            <span>comercial@reikisolar.energy</span>
          </div>
          <div class="contact-item">
            <i class="fas fa-map-marker-alt"></i>
            <span>Calle 57#35-28 Medellín, Colombia</span>
          </div>
          <div class="contact-item">
            <i class="fas fa-clock"></i>
            <span>Lun - Vie: 9:00 - 18:00</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="copyright">
          &copy; 2024 Reiki Energía Solar. Todos los derechos reservados.
        </p>
        <div class="footer-bottom-links">
          <a href="#privacy">Política de Privacidad</a>
          <a href="#terms">Términos de Servicio</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(180deg, #6b2181 0%, #4a1a5c 100%);
    color: white;
    padding: 4rem 0 2rem;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="footer-pattern" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="%23ffffff" opacity="0.05"/></pattern></defs><rect width="100" height="100" fill="url(%23footer-pattern)"/></svg>');
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .footer-brand {
    max-width: 300px;
  }

  .footer-logo {
    margin-bottom: 1.5rem;
  }

  .footer-logo .logo {
    height: 70px;
    width: auto;
    transition: transform 0.3s ease;
  }

  .footer-logo .logo:hover {
    transform: scale(1.05);
  }

  .footer-description {
    color: #e5e7eb;
    line-height: 1.6;
    margin-bottom: 2rem;
    font-size: 1rem;
  }

  .footer-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: white;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.8rem;
  }

  .footer-links a {
    color: #d1d5db;
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .footer-links a:hover {
    color: white;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-link {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    color: #d1d5db;
    font-size: 0.95rem;
  }

  .contact-item i {
    width: 20px;
    color: #8b2a9b;
    font-size: 1rem;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    color: #d1d5db;
    font-size: 0.9rem;
    margin: 0;
  }

  .footer-bottom-links {
    display: flex;
    gap: 2rem;
  }

  .footer-bottom-links a {
    color: #d1d5db;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-bottom-links a:hover {
    color: white;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 2rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .footer-brand {
      max-width: none;
    }

    .social-links {
      justify-content: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-bottom-links {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: 2rem 0 1.5rem;
    }

    .container {
      padding: 0 1rem;
    }

    .footer-content {
      gap: 1.5rem;
    }

    .social-links {
      gap: 0.8rem;
    }

    .social-link {
      width: 35px;
      height: 35px;
    }
  }
</style>
