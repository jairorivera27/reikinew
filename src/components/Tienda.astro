  window.updateCartQuantity = function(index, change) {
    cart[index].quantity += change;
    if (cart[index].quantity <= 0) {
      cart.splice(index, 1);
    }
    saveCartToStorage();
    updateCartUI();
  };

  // Eliminar del carrito
  window.removeFromCart = function(index) {
    cart.splice(index, 1);
    saveCartToStorage();
    updateCartUI();
  };

  // Navegaci√≥n del sidebar
  function initCategoryNavigation() {
    const categoryLinks = document.querySelectorAll('.category-link');
    const categorySections = document.querySelectorAll('.categoria-section');

    // Funci√≥n para actualizar el link activo
    function updateActiveLink() {
      const scrollPosition = window.scrollY + 150;

      categorySections.forEach((section) => {
        const sectionTop = section.offsetTop;
        const sectionBottom = sectionTop + section.offsetHeight;
        const sectionId = section.id;

        if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
          categoryLinks.forEach(link => link.classList.remove('active'));
          const activeLink = document.querySelector(`[data-category="${sectionId}"]`);
          if (activeLink) {
            activeLink.classList.add('active');
          }
        }
      });
    }

    // Smooth scroll al hacer click
    categoryLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const targetId = this.getAttribute('data-category');
        const targetSection = document.getElementById(targetId);
        
        if (targetSection) {
          const offsetTop = targetSection.offsetTop - 100;
          window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
          });
        }
      });
    });

    // Actualizar link activo al hacer scroll
    window.addEventListener('scroll', updateActiveLink);
    updateActiveLink(); // Inicializar
  }

  // Control de carruseles con movimiento autom√°tico infinito
  function initCarousels() {
    const tracks = document.querySelectorAll('.productos-track');
    
    tracks.forEach(track => {
      const category = track.getAttribute('data-category');
      const carousel = track.closest('.productos-carousel');
      const prevBtn = document.querySelector(`.prev-btn[data-category="${category}"]`);
      const nextBtn = document.querySelector(`.next-btn[data-category="${category}"]`);
      
      if (!track || !carousel) return;
      
      // Duplicar productos para efecto infinito
      const productos = Array.from(track.children);
      productos.forEach(producto => {
        const clone = producto.cloneNode(true);
        track.appendChild(clone);
      });
      
      // Pausar animaci√≥n al hacer hover
      track.addEventListener('mouseenter', () => {
        track.style.animationPlayState = 'paused';
      });
      
      track.addEventListener('mouseleave', () => {
        track.style.animationPlayState = 'running';
      });
      
      // Habilitar botones de navegaci√≥n para control manual
      if (prevBtn && nextBtn) {
        prevBtn.style.display = 'flex';
        nextBtn.style.display = 'flex';
        
        // Control manual con botones
        let isManualControl = false;
        let manualScrollPosition = 0;
        
        function moveCarousel(direction) {
          isManualControl = true;
          track.style.animationPlayState = 'paused';
          
          const cardWidth = 306; // Ancho de tarjeta
          const gap = 32; // 2rem gap
          const cardTotalWidth = cardWidth + gap;
          const carouselWrapper = track.closest('.productos-carousel-wrapper');
          
          if (!carouselWrapper) return;
          
          const containerWidth = carouselWrapper.offsetWidth;
          const containerCenter = containerWidth / 2;
          
          // Obtener la posici√≥n actual real del track (puede estar en movimiento)
          const currentTransform = track.style.transform;
          let actualPosition = manualScrollPosition;
          if (currentTransform) {
            const match = currentTransform.match(/translateX\((-?\d+(?:\.\d+)?)px\)/);
            if (match) {
              actualPosition = parseFloat(match[1]);
            }
          }
          
          // Calcular qu√© tarjeta est√° m√°s cerca del centro actualmente
          const currentCardIndex = Math.round(Math.abs(actualPosition) / cardTotalWidth);
          
          // Determinar el √≠ndice de la tarjeta objetivo
          let targetCardIndex;
          if (direction === 'next') {
            targetCardIndex = currentCardIndex + 1;
          } else {
            targetCardIndex = Math.max(0, currentCardIndex - 1);
          }
          
          // Calcular la posici√≥n para centrar la tarjeta objetivo
          // La posici√≥n debe centrar la tarjeta en el contenedor
          manualScrollPosition = -targetCardIndex * cardTotalWidth + (containerCenter - cardWidth / 2);
          
          // Ajustar posici√≥n si se sale de los l√≠mites
          const totalWidth = track.scrollWidth / 2; // Dividido por 2 porque est√° duplicado
          if (Math.abs(manualScrollPosition) >= totalWidth) {
            manualScrollPosition = 0;
          } else if (manualScrollPosition > 0) {
            manualScrollPosition = -totalWidth + cardTotalWidth;
          }
          
          track.style.transform = `translateX(${manualScrollPosition}px)`;
          track.style.transition = 'transform 0.5s ease';
          
          // Reanudar animaci√≥n autom√°tica despu√©s de un tiempo
          setTimeout(() => {
            isManualControl = false;
            track.style.animationPlayState = 'running';
            track.style.transition = '';
          }, 2000);
        }
        
        prevBtn.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          moveCarousel('prev');
        });
        
        nextBtn.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          moveCarousel('next');
        });
        
        // Touch events para m√≥viles
        let touchStartX = 0;
        let touchEndX = 0;
        
        track.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
        }, { passive: true });
        
        track.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          handleSwipe();
        }, { passive: true });
        
        function handleSwipe() {
          const swipeThreshold = 50;
          const diff = touchStartX - touchEndX;
          
          if (Math.abs(diff) > swipeThreshold) {
            if (diff > 0) {
              moveCarousel('next');
            } else {
              moveCarousel('prev');
            }
          }
        }
      }
    });
  }

