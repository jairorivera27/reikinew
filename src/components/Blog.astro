---
import { getCollection } from 'astro:content';

// Obtener los últimos posts del blog
const blogPosts = await getCollection('blog');
const latestPosts = blogPosts
  .sort((a, b) => {
    const dateA = new Date(a.data.date);
    const dateB = new Date(b.data.date);
    return dateB.getTime() - dateA.getTime();
  })
  .slice(0, 6);
---

<section id="blog" class="blog-section">
  <div class="container">
    <div class="blog-header">
      <h2 class="blog-title">Últimas Noticias</h2>
      <p class="blog-subtitle">Mantente informado sobre las últimas tendencias en energía solar</p>
    </div>

    <div class="blog-carousel">
      <div class="blog-track">
        {latestPosts.map((post) => (
          <a href={`/blog/${post.slug}`} class="blog-card" data-sslug={post.slug}>
            <div class="blog-image">
              <img src={post.data.image} alt={post.data.title} loading="lazy">
              <div class="blog-category">{post.data.category}</div>
            </div>
            <div class="blog-content">
              <div class="blog-meta">
                <span class="blog-date">{new Date(post.data.date).toLocaleDateString('es-CO', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
                <span class="blog-author">{post.data.author}</span>
              </div>
              <h3 class="blog-card-title">{post.data.title}</h3>
              <p class="blog-excerpt">{post.data.description}</p>
              <div class="blog-link">Leer más</div>
            </div>
          </a>
        ))}
        
