---
import { getCollection } from 'astro:content';

// Obtener productos más vendidos (primeros 6 ordenados)
const productos = await getCollection('productos');
const productosMasVendidos = productos
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
  .slice(0, 6);
---

<section id="productos" class="productos-section">
  <div class="container">
    <div class="productos-header">
      <h2 class="productos-title">Nuestros Productos Más Vendidos</h2>
      <p class="productos-subtitle">Descubre nuestras soluciones solares más populares</p>
    </div>

    <div class="productos-carousel-wrapper">
      <div class="productos-carousel">
        <div class="productos-track">
          {productosMasVendidos.map((producto) => (
            <a href="/tienda" class="producto-card">
              <div class="producto-image">
                <img src={producto.data.image} alt={producto.data.title} loading="lazy">
                {producto.data.stock === 'disponible' && (
                  <div class="producto-badge">Disponible</div>
                )}
                {producto.data.stock === 'agotado' && (
                  <div class="producto-badge agotado">Agotado</div>
                )}
                {producto.data.stock === 'pre-orden' && (
                  <div class="producto-badge pre-orden">Pre-orden</div>
                )}
              </div>
              <div class="producto-content">
                <h3 class="producto-name">{producto.data.title}</h3>
                <p class="producto-description">{producto.data.description}</p>
                <div class="producto-price">{producto.data.price}</div>
                <div class="producto-btn">Ver Detalles</div>
              </div>
            </a>
          ))}
          
          <!-- Duplicar productos para efecto infinito -->
          {productosMasVendidos.map((producto) => (
            <a href="/tienda" class="producto-card">
              <div class="producto-image">
                <img src={producto.data.image} alt={producto.data.title} loading="lazy">
                {producto.data.stock === 'disponible' && (
                  <div class="producto-badge">Disponible</div>
                )}
                {producto.data.stock === 'agotado' && (
                  <div class="producto-badge agotado">Agotado</div>
                )}
                {producto.data.stock === 'pre-orden' && (
                  <div class="producto-badge pre-orden">Pre-orden</div>
                )}
              </div>
              <div class="producto-content">
                <h3 class="producto-name">{producto.data.title}</h3>
                <p class="producto-description">{producto.data.description}</p>
                <div class="producto-price">{producto.data.price}</div>
                <div class="producto-btn">Ver Detalles</div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .productos-section {
    padding: 5rem 0;
    background: #6b2181;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .productos-header {
    text-align: center;
    margin-bottom: 3rem;
    width: 100%;
  }

  .productos-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    text-align: center;
  }

  .productos-subtitle {
    font-size: 1.2rem;
    color: #e5e7eb;
    text-align: center;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .productos-carousel-wrapper {
    position: relative;
    overflow: hidden;
    padding: 2rem 0;
  }

  .productos-carousel {
    width: 100%;
    overflow: hidden;
  }

  .productos-track {
    display: flex;
    gap: 2rem;
    transition: transform 0.5s linear;
    will-change: transform;
  }

  .producto-card {
    flex: 0 0 320px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    display: block;
    color: inherit;
  }

  .producto-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .producto-image {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
    background: #f3f4f6;
  }

  .producto-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .producto-card:hover .producto-image img {
    transform: scale(1.1);
  }

  .producto-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: linear-gradient(135deg, #6b2181, #8b2a9b);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    box-shadow: 0 4px 15px rgba(107, 33, 129, 0.4);
  }

  .producto-badge.agotado {
    background: linear-gradient(135deg, #ef4444, #dc2626);
  }

  .producto-badge.pre-orden {
    background: linear-gradient(135deg, #f59e0b, #d97706);
  }

  .producto-content {
    padding: 1.5rem;
  }

  .producto-name {
    font-size: 1.3rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.75rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .producto-description {
    font-size: 0.95rem;
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .producto-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #6b2181;
    margin-bottom: 1rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .producto-btn {
    display: block;
    width: 100%;
    text-align: center;
    background: linear-gradient(135deg, #FFD700, #FFA500);
    color: #1f2937;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
    pointer-events: none;
  }

  .producto-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 215, 0, 0.6);
    background: linear-gradient(135deg, #FFA500, #FFD700);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .producto-card {
      flex: 0 0 280px;
    }
  }

  @media (max-width: 768px) {
    .productos-section {
      padding: 3rem 0;
    }

    .productos-title {
      font-size: 2rem;
    }

    .productos-subtitle {
      font-size: 1rem;
    }

    .producto-card {
      flex: 0 0 260px;
    }

    .producto-image {
      height: 200px;
    }
  }

  @media (max-width: 480px) {
    .productos-title {
      font-size: 1.75rem;
    }

    .producto-card {
      flex: 0 0 240px;
    }

    .producto-image {
      height: 180px;
    }

    .producto-content {
      padding: 1.25rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.querySelector('.productos-track') as HTMLElement;
    if (!track) return;

    const cards = track.querySelectorAll('.producto-card') as NodeListOf<HTMLElement>;
    if (cards.length === 0) return;

    const gap = 32; // Gap entre tarjetas (2rem = 32px)
    
    let currentPosition = 0;
    let speed = 0.5; // Velocidad de desplazamiento (píxeles por frame)
    let animationId: number;
    let isPaused = false;

    function getCardWidth(): number {
      if (window.innerWidth <= 480) {
        return 240;
      } else if (window.innerWidth <= 768) {
        return 260;
      } else if (window.innerWidth <= 1024) {
        return 280;
      }
      return 320;
    }

    function getTotalWidth(): number {
      const cardWidth = getCardWidth();
      const cardTotalWidth = cardWidth + gap;
      const originalCardsCount = cards.length / 2; // Dividimos por 2 porque duplicamos los productos
      return originalCardsCount * cardTotalWidth;
    }

    function animate() {
      if (isPaused) {
        animationId = requestAnimationFrame(animate);
        return;
      }

      currentPosition -= speed;
      
      // Calcular cuándo reiniciar (cuando se hayan mostrado todos los productos originales)
      const totalWidth = getTotalWidth();
      
      if (Math.abs(currentPosition) >= totalWidth) {
        currentPosition = 0;
      }
      
      track.style.transform = `translateX(${currentPosition}px)`;
      animationId = requestAnimationFrame(animate);
    }

    // Pausar animación al hacer hover
    const carouselWrapper = document.querySelector('.productos-carousel-wrapper') as HTMLElement;
    if (carouselWrapper) {
      carouselWrapper.addEventListener('mouseenter', () => {
        isPaused = true;
      });

      carouselWrapper.addEventListener('mouseleave', () => {
        isPaused = false;
      });
    }

    // Ajustar velocidad en móviles
    function adjustSpeed() {
      if (window.innerWidth <= 768) {
        // Velocidad más lenta en móviles
        speed = 0.3;
      } else {
        speed = 0.5;
      }
    }

    window.addEventListener('resize', () => {
      adjustSpeed();
      // Reiniciar posición si es necesario
      const totalWidth = getTotalWidth();
      if (Math.abs(currentPosition) >= totalWidth) {
        currentPosition = 0;
      }
    });

    adjustSpeed();

    // Iniciar animación
    animate();
  });
</script>

